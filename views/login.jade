doctype html
html
    head
        title Login Page
    body
        h1 Login
        form(action='/signin' method='post')
            label(for='email') Email:
            input(type='email' name='email' required)
            br
            label(for='password') Password:
            input(type='password' name='password' required)
            br
            input(type='submit' value='Login')
