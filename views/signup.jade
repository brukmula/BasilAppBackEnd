doctype html
html
    head
        title Signup Page
    body
        h1 Signup
        form(action='/signup' method='post')
            label(for='email') Email:
            input(type='email' name='email' required)
            br
            label(for='password') Password:
            input(type='password' name='password' required)
            br
            input(type='submit' value='Signup')
